# ==============================================
# LottoPro-AI v3.0 Environment Configuration
# ==============================================

# GitHub 설정
GITHUB_REPO=kkbhong71/lottopro-ai-v3.0
GITHUB_TOKEN=your_github_token_here

# Flask 앱 설정
SECRET_KEY=lottopro-ai-v3-production-secret-key-change-this
FLASK_DEBUG=False
FLASK_ENV=production

# 서버 설정
PORT=5000
HOST=0.0.0.0

# 데이터베이스 설정 (향후 확장용)
# DATABASE_URL=sqlite:///lottopro.db
# REDIS_URL=redis://localhost:6379

# 로그 설정
LOG_LEVEL=INFO
LOG_FORMAT=detailed

# 보안 설정
SESSION_PERMANENT=False
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# API 제한 설정
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# 캐시 설정
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# 알고리즘 실행 설정
ALGORITHM_TIMEOUT=30
MAX_CONCURRENT_EXECUTIONS=5

# 데이터 설정
DATA_UPDATE_INTERVAL=3600
CSV_BACKUP_ENABLED=True

# 모니터링 설정 (선택사항)
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# 개발 전용 설정 (프로덕션에서는 주석 처리)
# FLASK_DEBUG=True
# LOG_LEVEL=DEBUG
